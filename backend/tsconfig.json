{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "commonjs",                    
    "lib": [
      "ES6",
      "ES2017",
      "ESNext.AsyncIterable"
    ],                     
    "allowJs": true,
    "outDir": "./dist",                          
    "rootDir": ".",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules/"]
}